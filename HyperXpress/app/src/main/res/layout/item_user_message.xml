<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contacts_image_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_nome_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome Usuario"
        android:textColor="@color/colorTextStandard"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/contacts_image_user"
        app:layout_constraintTop_toTopOf="@id/contacts_image_user"
         />
    <TextView
        android:id="@+id/tv_ultima_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome Usuario"
        android:textColor="@color/colorTextStandardLigth"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins"
        android:layout_marginEnd="10dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/contacts_image_user"
        app:layout_constraintTop_toBottomOf="@id/tv_nome_user"
        />

</androidx.constraintlayout.widget.ConstraintLayout>