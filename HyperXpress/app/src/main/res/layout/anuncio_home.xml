<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/filtros_arredondados"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/iv_fundo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/anuncio_color"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icone_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icone_usuario"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_fundo"
        app:layout_constraintStart_toStartOf="@+id/iv_fundo"/>

    <TextView
        android:id="@+id/nome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usuario"
        app:layout_constraintStart_toEndOf="@id/icone_user"
        app:layout_constraintTop_toTopOf="@id/iv_fundo"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorTextStandard"
        android:fontFamily="@font/poppins"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/estrela_um"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/icone_estrela"
        app:layout_constraintStart_toStartOf="@id/nome_user"
        app:layout_constraintTop_toBottomOf="@id/nome_user"
        app:tint="@color/amarelo" />

    <ImageView
        android:id="@+id/estrela_dois"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/icone_estrela"
        app:layout_constraintStart_toEndOf="@id/estrela_um"
        app:layout_constraintTop_toBottomOf="@id/nome_user"
        app:tint="@color/amarelo"/>

    <ImageView
        android:id="@+id/estrela_trez"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/icone_estrela"
        app:layout_constraintStart_toEndOf="@id/estrela_dois"
        app:layout_constraintTop_toBottomOf="@id/nome_user"
        app:tint="@color/amarelo"/>

    <ImageView
        android:id="@+id/estrela_quatro"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/icone_estrela"
        app:layout_constraintStart_toEndOf="@id/estrela_trez"
        app:layout_constraintTop_toBottomOf="@id/nome_user"
        app:tint="@color/amarelo"/>

    <ImageView
        android:id="@+id/estrela_cinco"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/icone_estrela"
        app:layout_constraintStart_toEndOf="@id/estrela_quatro"
        app:layout_constraintTop_toBottomOf="@id/nome_user"
        app:tint="@color/amarelo"/>

    <ImageView
        android:id="@+id/iv_imagem_produto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_fundo"
        app:layout_constraintBottom_toTopOf="@id/segundo_fundo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icone_patinete"/>

    <ImageView
        android:id="@+id/iv_produto_trocavel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_imagem_produto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:src="@drawable/icone_trocavel"/>

    <ImageView
        android:id="@+id/segundo_fundo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:background="@color/anuncio_color"/>
    <TextView
        android:id="@+id/tv_home_nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_do_produto"
        android:textSize="16sp"
        android:textColor="@color/colorTextStandard"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="@id/segundo_fundo"
        app:layout_constraintEnd_toEndOf="@id/segundo_fundo"
        app:layout_constraintTop_toTopOf="@id/segundo_fundo"/>

    <TextView
        android:id="@+id/tv_home_preco_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_do_produto"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorTextStandard"
        android:fontFamily="@font/poppins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/segundo_fundo"
        app:layout_constraintEnd_toEndOf="@id/segundo_fundo"
        app:layout_constraintTop_toBottomOf="@id/tv_home_nome_produto"/>
</androidx.constraintlayout.widget.ConstraintLayout>